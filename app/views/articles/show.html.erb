<div class="jumbotron">
<p>
  <h2><%= @article.headline %></h2>
</p>

<p>
  <%= image_tag @article.img, :class => "style_image" %>
</p>

<p>
  <%= @article.text.html_safe %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @article.tags %>
</p>

<p>
  <strong>Category:</strong>
  <%= @article.category %>
</p>

<p>
