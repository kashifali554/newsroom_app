<p id="notice"><%= notice %></p>

<div class="jumbotron">
<p>
  <h2><%= @article.headline %></h2>
</p>

<p>
  <%= image_tag @article.img, :class => "style_image" %>
</p>
<p><% @article.category %></p>
<p>
  <h4>By: <%= @article.user.email %></h4>
</p>

<p>
  <h4> Last updated <%= time_ago_in_words @article.updated_at %> ago</h4>
</p>
<hr>
<p>
  <%= @article.text.html_safe %>
</p>

<div class="e-options">
  <p>Editor only options</p>
  <% if can? :update, @article %>
    <td><%= link_to 'Edit', edit_article_path(@article), :class => "btn btn-primary" %></td>
  <% end %>
  <% if can? :destroy, @article %>
      <td><%= link_to 'Delete', @article, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
  <% end %>
</div>

<br>
<br>

