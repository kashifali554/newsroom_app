<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6">
    <% if can? :create, @article %>
      <%= link_to 'Create new article', new_article_path, :class => "btn btn-primary" %>
    <% end %>
  </div>

  <div class="dropdown col-md-6">
      <select name="cateogery" id="cateogery">
          <option value="1">Latest</option>
          <option value="2">US</option>
          <option value="3">Politics</option>
          <option value="4">Business</option>
          <option value="5">Sports</option>
          <option value="6">Opinion</option>
      </select>
      <%= submit_tag("Search") %>
  </div>
</div>


<h1>All stories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Headline</th>
      <th>Img</th>
      <th> Filed by </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.headline %></td>
        <td><%= image_tag article.img, :class => "img-admin" %></td>
        <td><%= article.user.email %></td>
        <td><%= link_to 'Show', article, :class => "btn btn-primary" %></td>
        <% if can? :update, article %>
            <td><%= link_to 'Edit', edit_article_path(article), :class => "btn btn-primary" %></td>
          <% end %>
        <% if can? :destroy, article %>
          <td><%= link_to 'delete', article, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
