<!DOCTYPE html>
<html>
  <head>
    <title>NewsroomApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="/assets/trix.css">
  <script type="text/javascript" src="/assets/trix.js"></script>
  </head>

  <body>
<div class="pull-right">
    <a href="/">Home</a>
    <a href="/articles">Articles</a>

    <% if current_user %>
    <a href="/profile">Profile</a>
    <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
  <% else %>
    <a href="/users/sign_in">Login</a>
    <a href="/users/sign_up">Sign up</a>
  <% end %>
</div>



    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">
          <%= yield %>
    </div>

    <script id="dsq-count-scr" src="//newsroom-app.disqus.com/count.js" async></script>
  </body>
</html>
